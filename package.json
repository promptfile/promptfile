{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "next": "^13.4.4",
    "prettier": "^2.5.1",
    "turbo": "^1.9.3"
  },
  "name": "glass",
  "packageManager": "npm@9.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": {
    "printWidth": 120,
    "proseWrap": "preserve",
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "{*.js?(on),*.md,.prettierrc,.babelrc}",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
