    "documentFormattingProvider": {
      "language": "glass",
      "scheme": "file"
    },
    "languages": [
      {
        "id": "glass-ts",
        "aliases": [
          "TypeScript (Glass)"
        ],
        "extensions": [
          ".glass"
        ],
        "configuration": "./configurations/language-configuration-ts.json",
        "icon": {
          "light": "./assets/icon-tree.svg",
          "dark": "./assets/icon-tree.svg"
        }
      },
      {
        "id": "glass-js",
        "aliases": [
          "JavaScript (Glass)"
        ],
