{
  "name": "@glass-lang/glassc",
  "version": "0.1.15",
  "description": "Glass language compiler",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "test": "mocha --exit",
    "test:watch": "npm-watch test",
    "test:watchAll": "mocha --watch",
    "build": "tsup src/index.ts",
    "dev": "npm run build -- --watch",
    "lint": "eslint src --ext ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundation-ui/glass.git"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "homepage": "https://github.com/foundation-ui/glass",
  "bugs": "https://github.com/foundation-ui/glass/issues",
  "keywords": [],
  "authors": [
    "John Rothfels <john@foundation-ui.com>",
    "Elliott Burris <elliott@foundation-ui.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@glass-lang/glasslib": "*",
    "@glass-lang/util": "*",
    "camelcase": "^7.0.1",
    "filbert": "^0.1.20",
    "mdast-util-from-markdown": "^1.3.0",
    "mdast-util-frontmatter": "^1.0.1",
    "mdast-util-mdx": "^2.0.1",
    "micromark-extension-frontmatter": "^1.1.0",
    "micromark-extension-mdxjs": "^1.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.11.18",
    "@types/prettier": "^2.7.2",
    "chai": "^4.3.7",
    "eslint-config-custom": "*",
    "mocha": "^10.2.0",
    "npm-watch": "^0.11.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "tslib": "^2.4.1",
    "tsup": "^6.7.0"
  },
  "tsup": {
    "sourcemap": true,
    "format": [
      "esm"
    ],
    "clean": true,
    "dts": true
  },
  "watch": {
    "test": {
      "patterns": [
        "./src"
      ],
      "inherit": true,
      "extensions": "ts,glass,py"
    }
  }
}
